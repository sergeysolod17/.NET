<Page x:Class="TMM_WPF.TableResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1024"
	Title="TableResult">

    <Grid>
        <DataGrid AutoGenerateColumns="False" Height="597" HorizontalAlignment="Left" Margin="12,12,0,0" Name="dataGrid1" VerticalAlignment="Top" Width="1000">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ElementName=array_mechanism, Path=NumberPosition}" Header="Номер положення" />
                <DataGridTextColumn Header="Кут повороту шатуна" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="937,615,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
    </Grid>
</Page>
